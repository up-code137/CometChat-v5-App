<resources>

    <style name="JavaSampleApp.v5" parent="CometChatTheme.DayNight" />

    <style name="ConfirmationDialogStyle" parent="CometChatConfirmDialogStyle" />

    <style name="DetailsAvatarStyle" parent="CometChatAvatarStyle">
        <item name="cometchatAvatarPlaceHolderTextAppearance">
            @style/AvatarPlaceHolderTextAppearance
        </item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AvatarPlaceHolderTextAppearance" parent="CometChatTextAppearanceHeading2.Bold">
        <item name="android:textSize">@dimen/cometchat_48sp</item>
    </style>

</resources>
