<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:minHeight="@dimen/cometchat_20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_typing_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/cometchat_is_typing" />

    <LinearLayout
        android:id="@+id/subtitle_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.cometchat.chatuikit.shared.views.messagereceipt.CometChatMessageReceipt
            android:id="@+id/message_receipts"
            android:layout_width="@dimen/cometchat_16dp"
            android:layout_height="@dimen/cometchat_16dp"
            android:layout_marginEnd="@dimen/cometchat_margin_1"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/cometchat_margin"
            android:gravity="center_vertical"
            android:minHeight="@dimen/cometchat_16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_message_type"
            android:layout_width="@dimen/cometchat_16dp"
            android:layout_height="@dimen/cometchat_16dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/cometchat_margin"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_last_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/cometchat_0dp"
            android:maxLines="1" />

    </LinearLayout>

</LinearLayout>
