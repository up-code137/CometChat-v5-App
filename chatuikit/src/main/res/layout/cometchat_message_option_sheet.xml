<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:elevation="@dimen/cometchat_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/cometchat_padding_3"
        android:paddingBottom="@dimen/cometchat_padding_5">

        <View
            android:id="@+id/view_popup_slider"
            android:layout_width="@dimen/cometchat_32dp"
            android:layout_height="@dimen/cometchat_4dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/cometchat_margin_5"
            android:background="@drawable/rounded_corners" />

        <HorizontalScrollView
            android:id="@+id/horizontal_container_reactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/cometchat_padding_2"
            android:paddingBottom="@dimen/cometchat_padding_2"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/view_reactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:background="@color/cometchat_color_stroke_light"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:nestedScrollingEnabled="true" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
