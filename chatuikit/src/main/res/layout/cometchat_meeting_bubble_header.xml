<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:importantForAccessibility="no"
            android:scaleType="fitXY"
            android:src="@drawable/cometchat_baseline_arrow_back_ios" />

        <com.cometchat.chatuikit.shared.views.avatar.CometChatAvatar
            android:id="@+id/meeting_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <LinearLayout
            android:id="@+id/scheduler_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scheduler_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/tv_last_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/subtitle_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/cometchat_duration_clock_ic" />

                <TextView
                    android:id="@+id/schedule_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textAlignment="center"
                    android:textColor="@color/cometchat_color_text_primary" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
