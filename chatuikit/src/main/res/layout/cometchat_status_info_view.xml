<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/cometchat_padding_1"
    android:paddingEnd="@dimen/cometchat_padding_1"
    android:paddingBottom="@dimen/cometchat_padding_1">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/date_time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/date_time_root_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/cometchat_padding_1"
            android:paddingTop="@dimen/cometchat_padding"
            android:paddingEnd="@dimen/cometchat_padding_1"
            android:paddingBottom="@dimen/cometchat_padding">

            <com.cometchat.chatuikit.shared.views.date.CometChatDate
                android:id="@+id/date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.cometchat.chatuikit.shared.views.messagereceipt.CometChatMessageReceipt
                android:id="@+id/receipt"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="@dimen/cometchat_margin_1" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
