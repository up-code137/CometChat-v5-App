<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/cometchat_padding_1"
        android:paddingTop="@dimen/cometchat_padding_1"
        android:paddingEnd="@dimen/cometchat_padding_1">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bubble_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/collaborative_bubble_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cometchat_136dp"
                    android:background="@drawable/cometchat_collaborative_document_img"
                    android:importantForAccessibility="no" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cometchat_margin_2"
            android:layout_marginBottom="@dimen/cometchat_margin_2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/cometchat_32dp"
                android:layout_height="@dimen/cometchat_32dp"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:src="@drawable/cometchat_ic_conversations_collaborative_whiteboard" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cometchat_margin_1"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_last_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cometchat_margin"
                    android:ellipsize="end"
                    android:maxLines="2" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/join_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cometchat_margin_5"
        android:layout_marginTop="@dimen/cometchat_margin_2"
        android:layout_marginEnd="@dimen/cometchat_margin_5"
        android:layout_marginBottom="@dimen/cometchat_margin_2"
        android:gravity="center"
        android:textStyle="bold"
        app:cornerRadius="8dp" />

</LinearLayout>
